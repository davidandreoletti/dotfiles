servers = (
  {
    address = "irc.freenode.net";
    chatnet = "Freenode";
    port = "7070";
    use_ssl = "yes";
    ssl_verify = "yes";
    ssl_capath = "/etc/ssl/certs/";
    autoconnect = "yes";
  }
);
chatnets = {
  Freenode = {
    type = "IRC";
    nick = "symbion";
    autosendcmd = "/msg nickserv identify aoeui ;wait 10000";
  };
};

# Channels I hang out in a lot.
channels = (
  { name = "##C++"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "##objc"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "##macdev"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "#OSdev"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "#iphonedev"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "#iphonedev"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "#mutt"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "#vim"; chatnet = "Freenode"; autojoin = "yes"; },
  { name = "#tested"; chatnet = "Freenode"; autojoin = "yes"; }
);

aliases = {
  J = "join";
  WJOIN = "join -window";
  WQUERY = "query -window";
  LEAVE = "part";
  BYE = "quit";
  EXIT = "quit";
  SIGNOFF = "quit";
  DESCRIBE = "action";
  DATE = "time";
  HOST = "userhost";
  LAST = "lastlog";
  SAY = "msg *";
  WI = "whois";
  WII = "whois $0 $0";
  WW = "whowas";
  W = "who";
  N = "names";
  M = "msg";
  T = "topic";
  C = "clear";
  CL = "clear";
  K = "kick";
  KB = "kickban";
  KN = "knockout";
  BANS = "ban";
  B = "ban";
  MUB = "unban *";
  UB = "unban";
  IG = "ignore";
  UNIG = "unignore";
  SB = "scrollback";
  UMODE = "mode $N";
  WC = "window close";
  WN = "window new hide";
  SV = "say Irssi $J ($V) - http://irssi.org/";
  GOTO = "sb goto";
  CHAT = "dcc chat";
  RUN = "SCRIPT LOAD";
  CALC = "exec - if command -v bc >/dev/null 2>&1\\; then printf '%s=' '$*'\\; echo '$*' | bc -l\\; else echo bc was not found\\; fi";
  SBAR = "STATUSBAR";
  INVITELIST = "mode $C +I";
  Q = "QUERY";
  "MANUAL-WINDOWS" = "set use_status_window off;set autocreate_windows off;set autocreate_query_level none;set autoclose_windows off;set reuse_unused_windows on;save";
  EXEMPTLIST = "mode $C +e";
  ATAG = "WINDOW SERVER";
  UNSET = "set -clear";
  RESET = "set -default";
};

settings = {
  core = { 
    real_name = "Unknown";
    user_name = "symbion";
    nick = "symbion";
  };
  theme = "madcow";
  "fe-text" = { actlist_sort = "refnum"; };
};

ignores = ( { level = "JOINS PARTS QUITS"; } );

statusbar = {
  default = {
    awl_0 = {
      items = {
        barstart = { priority = "100"; };
        awl_0 = { };
        barend = { priority = "100"; alignment = "right"; };
      };
    };
  };
};
