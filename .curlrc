# When following a redirect, automatically set the previous URL as referer.
referer = ";auto"

# Wait 60 seconds before timing out.
connect-timeout = 60

# Client UA identifier
user-agent = "Mozilla/5.0 (Windows NT 6.1) Gecko/20100101 Firefox"

# Show error when curl fails
show-error

# Use the server-specified Content-Disposition filename instead of extracting a filename from the URL.
# - If the server specifies a file name and a file with that name already exists in the current working directory it will not be overwritten and an error will occur. 
# - If the server doesn't specify a file name then this option has no effect. 
remote-header-name

# Display progress as a simple progress bar.
progress-bar

# Follow HTTP redirects.
location
